@using WebApplication1.Models
@model IEnumerable<DONDATHANG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
    //Khởi tạo control WebGrid
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 25); //25 = số dòng hiển thị
}

<br /><br />
@*Thể hiện dữ liệu thông qua control webGrid*@

<div>
    <form>

    </form>
</div>

<br />

@grid.GetHtml(
             tableStyle: "divTable",
             headerStyle: "gridHead",
             footerStyle: "gridFooter",
             rowStyle: "gridRow",
             alternatingRowStyle: "gridAltRow",
             columns: grid.Columns(
             grid.Column("MaDDH", "Mã ĐơnHàng"),
             grid.Column("MaKH", "Mã Khách Hàng"),
             grid.Column("ThoiDiemDat", "Thời điểm đặt"),
             grid.Column("NgayGiaoDuKien", "Ngày giao dự kiến"),
             grid.Column("MaNV", "Mã Nhân Viên"),
             grid.Column("TongTien", "Tổng Tiền"),
             grid.Column("TinhTrangGiaoHang", "Tình Trạng"),

             grid.Column(format: p => @Html.ActionLink("Xem thêm", "XemThem", new { id = p.MaDDH }))
             ))

    
@*Css cho từng Style của table*@
<style>
    .divTable {
        width: 100%;
        border: 1px solid #999999;
    }

        .divTable td {
            border: 1px solid #999999;
        }

    .gridHead {
        background-color: Green;
    }

        .gridHead > th > a {
            color: #fff;
        }

    .gridFooter {
        font-weight: bold;
    }

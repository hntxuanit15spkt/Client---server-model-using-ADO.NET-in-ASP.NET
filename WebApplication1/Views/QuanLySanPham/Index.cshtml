@using WebApplication1.Models;
@model IEnumerable<SANPHAM>

@{
     ViewBag.Title = "Index";
     Layout = "~/Views/Layout/AdminLayout.cshtml";
     //Khởi tạo control WebGrid
     WebGrid grid = new WebGrid(source: Model, rowsPerPage: 25);
}
@Html.ActionLink("Thêm sản phẩm", "TaoMoi", null, new { @class = "btn btn-success" })
<br /><br />
@*Thể hiện dữ liệu thông qua control webGrid*@
@grid.GetHtml(
    tableStyle: "divTable",
    headerStyle: "gridHead",
    footerStyle: "gridFooter",
    rowStyle: "gridRow",
    alternatingRowStyle: "gridAltRow",
    columns: grid.Columns(
    grid.Column("MaSP", "Mã sản phẩm"),
    grid.Column("TenSP", "Tên SP"),
    grid.Column("HinhAnh", "Hình ảnh", format: p => @Html.Raw("<img width=\"200\" height=\"100\" src=\"../Content/HinhAnhSP/" + p.HinhAnh + "\">")),
    grid.Column(format: p => @Html.ActionLink("Chỉnh sửa", "ChinhSua", new { id = p.MaSP })),
    grid.Column(format: p => @Html.ActionLink("Xóa tạm thời", "XoaTamThoiSanPham", new { maSP = p.MaSP })),
    grid.Column(format: p => @Html.ActionLink("Xóa hoàn toàn", "XoaHoanToanSanPham", new { maSP = p.MaSP }))
    ))


@*Css cho từng Style của table*@
<style>
     .divTable {
          width: 100%;
          border: 1px solid #999999;
     }

          .divTable td {
               border: 1px solid #999999;
          }

     .gridHead {
          background-color: Green;
     }

          .gridHead > th > a {
               color: #fff;
          }

     .gridFooter {
          font-weight: bold;
     }
     /*.gridRow {
         color:#fff;
         background-color:blueviolet;
     }
     .gridAltRow {
         color:#fff;
         background-color:darkorange;
     }*/
</style>

<style>
     .FooterAdmin {
          display: none;
     }
</style>
@section scripts{
     <script>
          $(function ()
          {
               var value = '@TempData["result"]';
               if (value != '')
               {
                    toastr.error(value);
               }
          });
     </script>
}
@using WebApplication1.Models
@model IEnumerable<NGUOIDUNG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
    //Khởi tạo control WebGrid
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 25); //25 = số dòng hiển thị
}

@Html.ActionLink("Thêm người dùng", "Insert", null, new { @class = "btn btn-success" })
<br /><br />
@*Thể hiện dữ liệu thông qua control webGrid*@

@Html.Action("MenuPartial", "QuanLyNguoiDung")
@grid.GetHtml(
             tableStyle: "divTable",
             headerStyle: "gridHead",
             footerStyle: "gridFooter",
             rowStyle: "gridRow",
             alternatingRowStyle: "gridAltRow",
             columns: grid.Columns(
             grid.Column("MaNguoiDung", "Mã Người Dùng"),
             grid.Column("Ho", "Họ"),
             grid.Column("TenLot", "Tên Lót"),
             grid.Column("Ten", "Tên"),
             grid.Column("TrangThai", "Trạng thái"),

             grid.Column(format: p => @Html.ActionLink("Chỉnh sửa", "Update", new { id = p.MaNguoiDung }))
             ))


@*Css cho từng Style của table*@
<style>
    .divTable {
        width: 100%;
        border: 1px solid #999999;
    }

        .divTable td {
            border: 1px solid #999999;
        }

    .gridHead {
        background-color: Green;
    }

        .gridHead > th > a {
            color: #fff;
        }

    .gridFooter {
        font-weight: bold;
